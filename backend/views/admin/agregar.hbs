<div class="container" style="margin:69px auto ; width:90%;" >
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="titulo" name="titulo">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="fecha" name="fecha">
                </div>

                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="cuerpo" name="cuerpo"></textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen:<input type="file" class="form-control" name="imagen" id="imagen" ></label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p style="padding:10px ;color:red">{{message}}</p>
            {{/if}}

        </div>



    </div>

</div>